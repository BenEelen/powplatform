{
  "name": "radicle",
  "private": true,
  "browserslist": [
    "extends @roots/browserslist-config"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "type": "module",
  "scripts": {
    "build": "yarn bud build production",
    "dev": "yarn bud build development",
    "translate": "yarn translate:pot && yarn translate:update",
    "translate:pot": "wp i18n make-pot . ./resources/lang/radicle.pot --include=\"app,config,resources,public/dist/js\"",
    "translate:update": "wp i18n update-po ./resources/lang/radicle.pot ./resources/lang/*.po",
    "translate:compile": "yarn translate:mo && yarn translate:js",
    "translate:js": "wp i18n make-json ./resources/lang --pretty-print",
    "translate:mo": "wp i18n make-mo ./resources/lang ./resources/lang"
  },
  "devDependencies": {
    "@playwright/test": "1.38.0",
    "@roots/bud": "6.18.0",
    "@roots/bud-eslint": "6.18.0",
    "@roots/bud-imagemin": "6.18.0",
    "@roots/bud-preset-wordpress": "6.18.0",
    "@roots/bud-prettier": "6.18.0",
    "@roots/bud-stylelint": "6.18.0",
    "@roots/bud-swc": "6.18.0",
    "@roots/bud-tailwindcss": "6.18.0",
    "@roots/eslint-config": "6.18.0",
    "@roots/sage": "6.18.0",
    "@tailwindcss/forms": "^0.5.3",
    "@types/alpinejs": "^3.7.1",
    "@types/wordpress__block-editor": "11.5.3",
    "@types/wordpress__blocks": "12.5.3",
    "typescript": "5.2.2"
  },
  "dependencies": {
    "@roots/wordpress-hmr": "6.18.0",
    "alpinejs": "3.13.0"
  }
}
